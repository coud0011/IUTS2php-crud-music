{
    "name": "coud0011/php-crud-music",
    "description": "DÃ©veloppement d'une application Web de consultation et modification de morceaux de musique",
    "type": "project",
    "license": "Copyleft",
    "autoload": {
        "psr-4": {
            "": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\":"tests"
        }
    },
    "authors": [
        {
            "name": "coud0011",
            "email": "axel.coudrot@etudiant.univ-reims.fr"
        }
    ],
    "require": {
        "ext-pdo": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.16",
        "codeception/codeception": "^4.1",
        "codeception/module-phpbrowser": "^1",
        "codeception/module-asserts": "^1",
        "codeception/module-db": "^1"
    },
    "scripts": {
        "start:linux": [
            "Composer\\Config::disableProcessTimeout",
            "bin/run-server.sh"
        ],
        "test:cs": [
            "php vendor/bin/php-cs-fixer fix --dry-run --diff"
        ],
        "fix:cs": [
            "php vendor/bin/php-cs-fixer fix"
        ],
        "start:windows": [
            "Composer\\Config::disableProcessTimeout",
            "bin/run-server.bat"
        ],
        "start": [
            "@start:linux"
        ],
        "test:crud": [
            "php vendor/bin/codecept run Crud"
        ],
        "test:codecept": [
            "php vendor/bin/codecept run"
        ],
        "test": [
            "@test:cs",
            "@test:crud",
            "@test:codecept",
            "@test:browse"
        ],
        "test:browse": [
            "php vendor/bin/codecept clean",
            "php vendor/bin/codecept run Browse"
        ]
    }
}
